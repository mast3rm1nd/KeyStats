<Window x:Class="KeyStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyStats"
        mc:Ignorable="d"
        Title="Клавишная статистика" Height="431" Width="363" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="DayStats_TextBox" Margin="10,30,0,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" HorizontalAlignment="Left" Width="165"/>
        <TextBox x:Name="OverallStats_TextBox" Margin="180,30,12,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <Label x:Name="label" Content="За сутки:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="label_Copy" Content="За всё время:" HorizontalAlignment="Left" Margin="180,4,0,0" VerticalAlignment="Top" Width="165"/>

    </Grid>
</Window>
